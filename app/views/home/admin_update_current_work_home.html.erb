
<div id="update_slideshow">
	<h2>Listing All Current Projects</h2>
</div>

<div id="update_slideshow_button">
	<%= link_to 'Create New Current Work Project', admin_update_current_work_path, :class => 'btn btn-mini' %>
</div>


<div class="row">
  <ul class="thumbnails files">
<% unless Project.all.empty? %>
  <% Project.all.each do |pic| %>
    <li class="span3" id="picture_<%= pic.id %>">
    <div class="thumbnail">
      <%= image_tag pic.avatar.url %>
      <div class="caption">
        <p style="text-align: center;">
         <%= link_to "Edit Project", project_path(pic) %> | 
        <%=
          link_to "Delete Project", project_path(pic.id),
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>

        </p>
      </div>
    </div>
    </li>
  <% end %>
<% end %>
</ul>
</div>