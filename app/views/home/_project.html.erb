<%= form_for @project, url: "/admin_update_current_work_post", method: "post", :html => { :class => 'form-horizontal', multipart: true }  do |f| %>
	
	<%= f.text_field :name, placeholder: "Project Name" %><br />

	<%= f.file_field :avatar %><br />
	
	<%= f.submit "Submit", :class => 'formbuttons'%>
<% end %>