
<a name="homePage"></a>
<div id="container-carousel">
	<div id="carousel-div">
		<div class="owl-carousel">
			<% Slideshow.all.each do |x| %>
				<div class="item"><img src="<%= x.avatar.url %>" align="middle"></div>
			<% end %>
		</div>
	</div>
</div>



<div id="testing_oh">


<a name="currentWork"></a>
<h1 id= "home_past_work">Current Work</h1>
<div id="home_current_work">
	<div class="container-fluid">
		<% @test_count = 0 %>
		<% Project.all.each do |x| %>
			<% if @test_count == 0 %>
				<div id="footer-row1" class="row">
					<div id="<%= @test_count %>" class="col-sm-6"><a href="/project_show/<%= x.id %>"><img src="<%= x.avatar.url %>"/></a></div>
					<% @test_count = 1 %>
			<% elsif @test_count == 1 %>
					<div id="<%= @test_count %>" class="col-sm-6"><a href="/project_show/<%= x.id %>"><img src="<%= x.avatar.url %>"/></a></div>
					<% @test_count = 0 %>
				</div>
			<% end %>		
		<% end %>
	</div>
</div>


	

<a name="pastWork"></a>
<h1 id= "home_past_work">Past Work</h1>
<div id="test">
	<div class="masonry js-masonry"  data-masonry-options='{ "columnWidth": 50 }'>
		<% Masonry.all.each do |x| %>
			<% if x.size == "1" %>
				<div class="item w1 h1">
			<% elsif x.size == "2" %>
				<div class="item w2 h2">
			<% elsif x.size == "3" %>
				<div class="item w3 h3">
			<% end%>
			<a href="<%= x.avatar.url %>" title="" class="thickbox"><img src="<%= x.avatar.url %>" alt="Single Image"/></a>

			</div>
		<% end %>
	</div>
</div>





	<a name="contact"></a>
	<div class="container-fluid">
		<div id="footer-row1" class="row">
			<div class="col-sm-1"></div>
			<div id="nav-logo" class="col-sm-10">Greenwich Development Group</div>
			<div class="col-sm-1"></div>
		</div>
			<div id="footer-row2" class="row">
				<div class="col-sm-6">
					<%= Contact.last.email %>
					<p><%= Contact.last.phone_number %></p>
				</div>
				<div class="col-sm-6">
					<%= Contact.last.street_address %>
					<p><%= Contact.last.address %></p>
				</div>
			</div>
	</div>
	</div>

<script>
	$(document).ready(function() {

		var container = document.querySelector('#test');
		var msnry = new Masonry( container, {
		  // options
		  columnWidth: 50,
		  itemSelector: '.item'
		});
	});

	$(document).ready(function() {
		var previousScroll = 0,
		    headerOrgOffset = $('#nav-div').height();

		$('#nav-wrap').height($('#nav-div').height());
		if (document.getElementById("testing_oh")) {
			$(window).scroll(function () {
			    var currentScroll = $(this).scrollTop();
			    if (currentScroll > headerOrgOffset) {
			        if (currentScroll > previousScroll) {
			            $('#nav-wrap').slideUp();
			        } else {
			            $('#nav-wrap').slideDown();
			        }
			    } 
			    previousScroll = currentScroll;
			});
		};
	});
</script>

<style>
#nav-wrap {
  position: fixed;
}

#nav-div {
  position: absolute;
}
</style>
